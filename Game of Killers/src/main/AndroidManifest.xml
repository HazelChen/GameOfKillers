<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nju.edu.gameofkillers" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name_chinese" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddPlayerActivity"
            android:label="@string/title_activity_add_player" >
        </activity>
        <activity
            android:name=".activities.GameSettingActivity"
            android:label="@string/title_activity_game_setting" >
        </activity>
        <activity
            android:name=".activities.ViewIdnetityActivity"
            android:label="@string/title_activity_view_idnetity" >
        </activity>
        <activity
            android:name=".activities.ShowIdentityActivity"
            android:label="@string/title_activity_show_identity" >
        </activity>
    </application>

</manifest>
