<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nju.edu.gameofkillers" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
                android:name="com.umeng.fb.ConversationActivity"/>
        <meta-data
                android:value="YOUR_APP_KEY"
                android:name="UMENG_APPKEY"/>
        <meta-data
                android:value="Channel ID"
                android:name="UMENG_CHANNEL"/>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name_chinese" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddPlayerActivity"
            android:label="@string/title_activity_add_player" >
        </activity>
        <activity
            android:name=".activities.GameSettingActivity"
            android:label="@string/title_activity_game_setting" >
        </activity>
        <activity
            android:name=".activities.ViewIdnetityActivity"
            android:label="@string/title_activity_view_idnetity" >
        </activity>
        <activity
            android:name=".activities.ShowIdentityActivity"
            android:label="@string/title_activity_show_identity" >
        </activity>
        <activity
            android:name=".activities.GameMainActivity"
            android:label="@string/title_activity_game_main" >
        </activity>
        <activity
            android:name=".activities.BackToJudgeActivity"
            android:label="@string/title_activity_back_to_judge" >
        </activity>
    </application>

</manifest>
